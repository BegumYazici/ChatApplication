<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/sender_message_field_padding_bottom"
    android:paddingEnd="@dimen/sender_message_field_padding_end"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dateTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Thursday 11.59" />

    <TextView
        android:id="@+id/senderMessageTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/message_max_width"
        android:padding="@dimen/message_padding"
        android:background="@drawable/sender_message_background"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTextview"
        tools:text="What are you doing today?" />

</androidx.constraintlayout.widget.ConstraintLayout>